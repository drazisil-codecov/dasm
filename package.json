{
  "name": "dasm",
  "version": "1.0.0",
  "description": "A disassembler",
  "main": "index.js",
  "scripts": {
    "test": "xo --fix . && jest",
    "docs": "jsdoc src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drazisil/dasm.git"
  },
  "author": "Drazisil",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/drazisil/dasm/issues"
  },
  "homepage": "https://github.com/drazisil/dasm#readme",
  "devDependencies": {
    "jest": "^26.5.0",
    "jest-junit": "^11.1.0",
    "jsdoc": "^3.6.6",
    "prettier": "^2.1.2",
    "xo": "^0.33.1"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "es2020",
      "node",
      "jest"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
